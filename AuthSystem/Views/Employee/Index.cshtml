@model IEnumerable<AuthSystem.Models.Employee>

@{
    //Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employee Register</title>
</head>

<h4>Employee Register</h4>
<hr />
<body>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Position)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OfficeLocation)
                </th>
                <th>
                    <a asp-action="AddOrEdit" class="btn btn-outline-success">
                        <i class="far fa-plus-square">
                        </i> Employee
                    </a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Position)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OfficeLocation)
                    </td>
                    <td>
                        <a asp-action="AddOrEdit" asp-route-id="@item.EmployeeId"><i class="far fa-marker fa-lg"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.EmployeeId" class="text-danger ml-1" onclick="return confirm('Are you sure you want to delete this record?')"><i class="far fa-trash fa-lg"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
